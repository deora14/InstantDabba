<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="oval">
            <gradient android:angle="135" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="#008F11" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />
            <corners android:radius="40dp" />
            <stroke android:width="4dp" android:color="#008F11" />
        </shape>

    </item>
</selector>