<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/dabba"
    tools:context=".usersignup">
    <RelativeLayout
        android:id="@+id/lo"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerInParent="true"
            android:id="@+id/logo"
            android:src="@drawable/logo"
            android:layout_width="200dp"
            android:layout_height="100dp" />
        <TextView
            android:textStyle="italic"
            android:textSize="20dp"
            android:layout_below="@id/logo"
            android:gravity="center"
            android:text = "Instant  डब्बा"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:textColorHint="#FFFFFF"
        android:layout_height="wrap_content">

    <EditText
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:drawableRight="@drawable/ic_home_black_24dp"
        android:paddingLeft="10dp"
        android:id="@+id/name"
        android:textSize="25dp"
        android:hint="name"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:textColorHint="#FFFFFF"
        android:layout_height="wrap_content">
    <EditText
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:drawableRight="@drawable/ic_phone_black_24dp"
        android:paddingLeft="10dp"
        android:id="@+id/mobile"
        android:textSize="25dp"
        android:hint="mobile"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:textColorHint="#FFFFFF"
        android:layout_height="wrap_content">
    <EditText
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:drawableRight="@drawable/ic_mail_outline_black_24dp"
        android:paddingLeft="10dp"
        android:id="@+id/email"
        android:textSize="25dp"
        android:hint="email"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:textColorHint="#FFFFFF"
        android:layout_height="wrap_content">
    <EditText
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:drawableRight="@drawable/ic_lock_outline_black_24dp"
        android:id="@+id/pass"
        android:layout_margin="5dp"
        android:textSize="25dp"
        android:inputType="textPassword"
        android:hint="password"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:textColorHint="#FFFFFF"
        android:layout_height="wrap_content">
    <EditText
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:drawableRight="@drawable/ic_lock_outline_black_24dp"
        android:id="@+id/repass"
        android:layout_margin="5dp"
        android:textSize="25dp"
        android:inputType="textPassword"
        android:hint="confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:textColorHint="#FFFFFF"
        android:layout_height="wrap_content">
    <EditText
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:drawableRight="@drawable/ic_assignment_ind_black_24dp"
        android:paddingLeft="10dp"
        android:id="@+id/address"
        android:textSize="25dp"
        android:hint="Address"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    </android.support.design.widget.TextInputLayout>
    <Button android:id="@+id/SignUp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="30sp"
        android:text="SignUp"
        android:gravity="center"
        android:textColor="#008F11"
        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
    <TextView android:id="@+id/login"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:text="             Click here \n               login"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />
</LinearLayout>